<!-- Example simulation configuration file -->
<simulation>
    <parameters>
        <repetitions>1</repetitions>
        <time>30</time>
    </parameters>
    <instances>
        <instance ip="127.0.0.1" port="9999" agent-type="exchange"/>
        <instance ip="127.0.0.1" port="8087" agent-type="watcher"/>
        <instance ip="127.0.0.1" port="8088" agent-type="orderinjector"/>
    </instances>
    <agents>
        <exchanges>
            <exchange name="NYSE" ticker="AAPL" connect-time="30" trading-time="20"/>
        </exchanges>
        <watchers>
            <watcher exchange="NYSE" ticker="AAPL"/>
        </watchers>
        <orderinjectors>
            <orderinjector 
                exchange="NYSE" 
                ticker="AAPL"
                supply_min_low="140" 
                supply_min_high="155" 
                supply_max_low="155" 
                supply_max_high="170"
                demand_min_low="130" 
                demand_min_high="145" 
                demand_max_low="145" 
                demand_max_high="160"
                step_mode="jittered" 
                time_mode="periodic"
                use_input_file="true"
                use_offset="true"
                interval="1"
                input_file="../IBM-310817.csv"
            />
        </orderinjectors>
    </agents>
</simulation>


