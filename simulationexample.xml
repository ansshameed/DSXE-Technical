<!-- Example simulation configuration file -->
<simulation>
    <parameters>
        <repetitions>1</repetitions>
        <time>30</time>
    </parameters>
    <instances>
        <instance ip="127.0.0.1" port="9999" agent-type="exchange"/>
        <instance ip="127.0.0.1" port="8087" agent-type="watcher"/>
        <instance ip="127.0.0.1" port="8088" agent-type="orderinjector"/>
    </instances>
    <agents>
        <exchanges>
            <exchange name="NYSE" ticker="AAPL" connect-time="30" trading-time="20"/>
        </exchanges>
        <watchers>
            <watcher exchange="NYSE" ticker="AAPL"/>
        </watchers>
        <orderinjectors>
            <orderinjector 
            exchange="NYSE" 
            ticker="AAPL"
            supply_min_low="100" 
            supply_min_high="120" 
            supply_max_low="180" 
            supply_max_high="200"
            demand_min_low="100" 
            demand_min_high="120" 
            demand_max_low="180" 
            demand_max_high="200"
            step_mode="jittered" 
            time_mode="periodic"
            use_input_file="true"
            use_offset="true"
            interval="1"
            input_file="../IBM-310817.csv"
        />
        </orderinjectors>
    </agents>
</simulation>


