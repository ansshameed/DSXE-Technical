<!-- Example simulation configuration file -->
<simulation>
    <parameters>
        <repetitions>1</repetitions>
        <time>30</time>
    </parameters>
    <instances>
        <instance ip="127.0.0.1" port="9999" agent-type="exchange"/>
        <instance ip="127.0.0.1" port="8080" agent-type="trader"/>
        <instance ip="127.0.0.1" port="8081" agent-type="trader"/>
        <instance ip="127.0.0.1" port="8082" agent-type="trader"/>
        <instance ip="127.0.0.1" port="8083" agent-type="trader"/>
        <instance ip="127.0.0.1" port="8085" agent-type="watcher"/>
    </instances>
    <agents>
        <exchanges>
            <exchange name="NYSE" ticker="AAPL" connect-time="30" trading-time="30"/>
        </exchanges>
        <traders>
            <macd exchange="NYSE" ticker="AAPL" side="buy" limit="150" delay="0" trade-interval="5"/>
            <zic exchange="NYSE" ticker="AAPL" side="buy" limit="150" delay="0" trade-interval="5"/>
            <macd exchange="NYSE" ticker="AAPL" side="sell" limit="50" delay="0" trade-interval="5"/>
            <zic exchange="NYSE" ticker="AAPL" side="sell" limit="50" delay="0" trade-interval="5"/>
        </traders>
        <watchers> 
            <watcher exchange="NYSE" ticker="AAPL"/>
        </watchers> 
    </agents>
</simulation>


